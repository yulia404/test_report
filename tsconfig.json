{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es5",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
  
      "baseUrl": "./"
    },
    "include": [
      "src",
      "tests",
      "**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }